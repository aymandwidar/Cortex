# Cortex Configuration Example
# Copy this file to .env and fill in your actual values

# Authentication
KIRIO_CORTEX_MASTER_KEY=your-secure-master-key-here

# Upstream API Keys
OPENAI_API_KEY=sk-...
GROQ_API_KEY=gsk_...
DEEPSEEK_API_KEY=...
ANTHROPIC_API_KEY=sk-ant-...
OPENROUTER_API_KEY=sk-or-v1-...

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PII_TTL=300
REDIS_PREFETCH_TTL=600

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=cortex_memory
QDRANT_API_KEY=

# Model Configuration
LITELLM_CONFIG_PATH=config.yaml

# Sentiment Analysis
SENTIMENT_OVERRIDE_THRESHOLD=-0.8

# Memory Configuration
MEMORY_TOP_K=3

# CORS
ALLOWED_ORIGINS=["*"]

# Logging
LOG_LEVEL=INFO
GOOGLE_CLOUD_PROJECT=
