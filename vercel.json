{
  "version": 2,
  "builds": [
    {
      "src": "admin-ui/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://cortex-v25-cloud-native.onrender.com/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/admin-ui/$1"
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://cortex-v25-cloud-native.onrender.com"
  }
}